{
  "name": "flight-above",
  "version": "1.0.0",
  "description": "A Mac menu bar app that displays current flights overhead",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p src/main/tsconfig.json -w",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "vite build",
    "start": "electron dist/main/main.js",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "clean": "rimraf dist"
  },
  "keywords": [
    "electron",
    "flight",
    "tracking",
    "menu-bar",
    "macos"
  ],
  "author": "Louis Leng",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.1.0",
    "vite": "^4.4.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "electron-store": "^8.1.0",
    "menubar": "^9.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.louisleng.flightabove",
    "productName": "FlightAbove",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    }
  }
} 